{
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  
  "crons": [
    {
      "path": "/api/cron/renew-quests",
      "schedule": "0 0 * * *"
    }
  ],
  
  "headers": [
    {
      "source": "/documentation/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}